@model IEnumerable<GroupData<Employee>>
@{
    ViewData["Title"] = "GroupingResult";
}

<h1>GroupingResult</h1>
<div class="row">
    <div class="col-12">
        @foreach (var g in Model)
        {
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Group by</th>
                        <th>Result</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@g.Key</td>
                        <td>
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Employee</th>
                                        <th>Gender</th>
                                        <th>Salary</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var d in g.Persons)
                                    {
                                        <tr>
                                            <td>@d.EmployeeName</td>
                                            <td>@d.Gender</td>
                                            <td>@d.Salary</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </td>
                    </tr>
                </tbody>
            </table>
        }
    </div>
</div>


